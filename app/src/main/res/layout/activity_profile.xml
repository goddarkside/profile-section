<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#121212"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_profile">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top Bar -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/left_arrow"
                android:id="@+id/backbtn"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="120dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/supportbtn"
                android:layout_marginStart="70dp"
                android:background="@drawable/rounded_card"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="8dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/comment"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/support"
                    app:tint="#FFFFFF" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_margin="1dp"
                    android:text="@string/support"
                    app:tint="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>

        <!-- Profile Info -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingVertical="16dp"
            android:gravity="center_vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="12dp"
                android:id="@+id/view2"
                android:layout_alignParentStart="true"
                app:cardCornerRadius="40dp"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_height="80dp"
                    android:layout_width="match_parent"
                    android:id="@+id/profilepic"
                    android:src="@drawable/profileimg"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="95dp">

                <TextView
                    android:text="andaz Kumar"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:id="@+id/name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="member since Dec, 2020"
                    android:textColor="#BBBBBB"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/editbtn"
                android:src="@drawable/edit"
                android:layout_alignParentEnd="true"
                app:tint="#FFFFFF" />
        </RelativeLayout>

        <!-- CRED Garage Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="12dp"
            android:background="@drawable/rounded_card"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginVertical="8dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/car"
                android:layout_margin="10dp"
                app:tint="#FFFFFF" />

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="95dp">

                <TextView
                    android:text="get to know your vehicles, inside out"
                    android:textColor="#DEDDDD"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="CRED garage"
                        android:textSize="16sp"
                        android:textColor="#ffffff" />
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:src="@drawable/right_arrow"
                        android:id="@+id/credgarage"
                        android:layout_margin="10dp"
                        app:tint="#FFFFFF" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <!-- Info Rows -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/radius"
            android:layout_margin="4dp"
            app:tint="#FFFFFF" />
        <TextView
            android:text="credit score"
            android:textColor="#DEDDDD"
            android:textSize="14sp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <TextView
            android:text=". REFRESH AVAILABLE"
            android:textColor="#18DB20"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <TextView
            android:text="757"
            android:textColor="#DEDDDD"
            android:textSize="14sp"
            android:layout_marginStart="22dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/creditscore"
            android:src="@drawable/right_arrow"
            android:layout_margin="5dp"
            app:tint="#FFFFFF" />
    </LinearLayout>
<View
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:background="@color/black"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/rupee"
                android:layout_margin="4dp"
                app:tint="#FFFFFF" />
            <TextView
                android:text="lifetime caseback"
                android:textColor="#DEDDDD"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:layout_width="240dp" />
            <TextView
                android:text="₹ 3"
                android:textColor="#DEDDDD"
                android:textSize="14sp"
                android:layout_marginStart="22dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/right_arrow"
                android:id="@+id/caseback"
                android:layout_margin="5dp"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <View
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@color/black"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="25dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/upi"
                android:layout_margin="4dp"
                app:tint="#FFFFFF" />
            <TextView
                android:text="Bank Balance"
                android:textColor="#DEDDDD"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:layout_width="225dp"/>
            <TextView
                android:text="check"
                android:textColor="#DEDDDD"
                android:textSize="14sp"
                android:layout_marginStart="22dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/right_arrow"
                android:layout_margin="5dp"
                android:id="@+id/bankbalance"
                app:tint="#FFFFFF" />
        </LinearLayout>
        <!-- Rewards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#1E1E1E">
            <TextView
                android:text="@string/your_rewards_benefits"
                android:textColor="#888888"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"/>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="caseback balance"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_alignParentStart="true"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/right"
                        android:id="@+id/casebackbalance"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        app:tint="#FFFFFF" />
                </RelativeLayout>


                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="₹0"
                    android:textColor="#BBBBBB"
                    android:textSize="14sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="1dp"
                android:background="@color/black"/>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="coins"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_alignParentStart="true"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/right"
                        android:id="@+id/coins"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        app:tint="#FFFFFF" />
                </RelativeLayout>


                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="12,34,596"
                    android:textColor="#BBBBBB"
                    android:textSize="14sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="1dp"
                android:background="@color/black"/>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="win upto Rs 1000"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_alignParentStart="true"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/right"
                        android:id="@+id/refer"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        app:tint="#FFFFFF" />
                </RelativeLayout>


                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="refer and earn"
                    android:textColor="#BBBBBB"
                    android:textSize="14sp" />
            </LinearLayout>
            <!-- Transactions -->
            <TextView
                android:text="@string/transactions_support"
                android:textColor="#888888"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="all Transactions"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_alignParentStart="true"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/right"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/alltransactions"
                        android:layout_margin="5dp"
                        app:tint="#FFFFFF" />
                </RelativeLayout>


                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="34,596"
                    android:textColor="#BBBBBB"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>






    </LinearLayout>

</ScrollView>













